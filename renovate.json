{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:daily"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^modules/.+\\.nix$/"
      ],
      "matchStrings": [
        "image\\s*=\\s*\"(?<depName>[^:]+):(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Auto-merge all dependency updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "description": "Pin Docker image versions",
      "matchDatasources": [
        "docker"
      ],
      "rangeStrategy": "pin"
    },
    {
      "description": "Use semantic versioning for linuxserver images",
      "matchDatasources": [
        "docker"
      ],
      "versioning": "regex:^(version-)?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(-r(?<build>\\d+))?(-ls(?<revision>\\d+))?$",
      "matchPackageNames": [
        "/^lscr\\.io/linuxserver//"
      ]
    }
  ]
}
